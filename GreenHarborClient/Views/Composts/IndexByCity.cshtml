@{
    Layout = "_Layout";
}

@using GreenHarborClient.Models;

<div class="container1">
<h2>Search by City</h2>

<form asp-action="IndexByCity" method="get">
  <p>
      <input type="text" name="city" value="@ViewData["City"]" />
      <input type="submit" value="Search" class="btn" />
  </p>
</form>

@foreach (Compost compost in Model)
{
  <li><strong>@compost.ContactName</strong> - @compost.Zip - @compost.Location - @compost.City | <a href="/composts/Details/@(compost.CompostId)">View Details</a></li>
}

<p>@Html.ActionLink("Back to Index", "Index")</p>
</div>